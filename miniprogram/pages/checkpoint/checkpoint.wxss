.table{
  background-color: #cee3d9;
  height: 1207rpx;
  background-image: url(https://bpic.588ku.com/back_pic/05/94/31/485d2dcceeebd47.jpg);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.text-box{
  height: 900rpx;
  width: 600rpx;
  background-color: #cee3d9;
  margin: 110rpx auto;
  display: flex;
  flex-flow: wrap;
  align-content: flex-start;
  overflow: auto;
}
.text-box::-webkit-scrollbar {display:none}
.text{
  width: 60rpx;
  height: 60rpx;
  background-color: #c0dae1;
  text-align: center;
  line-height: 60rpx;
  padding: 4rpx;
  border: 6rpx solid #3d8a9e;
  margin-left: 16rpx;
  margin-top: 16rpx;
}
.a{
  border: 6rpx solid #828282;
}
.b{
  border: 6rpx solid #bf8f42;
  background-color: #f5d995;
}
.sy-box{
  background-color: #cee3d9;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: -20rpx;
  margin-top: 10rpx;
}